.col-sm-12.col-md-12
    section.slider(ng-controller='SliderController')
        div(bz-slider='', delay='delay', autoplay='true')
            .bz-slide(ng-repeat='(i, slide) in slides', ng-show='i == $slideIndex', ng-class='slide.class')
                img(ng-src='{{ slide.image }}', width='100%', height='500px')

.col-md-7.col-sm-7.col-md-offset-3.col-sm-offset-3
    section.search
        .search-caption
            h2 Looking for Jobs, Freelancers, Services?
        form.form-inline(ng-controller='SearchController')
            fieldset
                .col-md-9.col-sm-9
                    input.input-search(name='query', type='text', value='', placeholder='e.g Business Analyst, Painter, Web Designer, etc.')
                .col-md-3.col-sm-3
                    button.btn.btn-success.button-search(type='submit')
                        i.icon16.i-search-3
                        | Search
